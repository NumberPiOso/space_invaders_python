#:kivy 1.0.9

<AsteroidPlayer>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          


<AsteroidGame>:
    player: asteroid_player
    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 2
        top: root.top - 50
        text: str(root.player.score)
            
    AsteroidPlayer:
        id: asteroid_player
        center: self.parent.center